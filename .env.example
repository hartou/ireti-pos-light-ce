# Ireti POS Light CE - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Django Settings
DJANGO_SETTINGS_MODULE=iretilightpos.settings.devlopement
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Stripe Keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_ENDPOINT_SECRET=whsec_your_webhook_secret_here

# Database Configuration (optional - defaults to SQLite in development)
# DATABASE_URL=postgres://user:password@localhost:5432/iretiposlightdb

# Admin User Configuration
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=change-this-password-in-production
